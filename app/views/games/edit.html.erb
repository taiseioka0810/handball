<%= stylesheet_link_tag "games", :media => "all" %>

<div class="container">
    <div class="row ">
        <div class="col">
            <ul class="sidenav">
                <li><a class="active" href="#top"><%= link_to 'トップページ', statics_index_path %></a></li>
                <li><a href="#handball"><%= link_to "ハンドボールとは？",statics_about_path %></a></li>
                <li><a href="#score"><%= link_to "スコアについて",statics_score_path %></a></li>
                <li><a href="#score-index"><%= link_to "スコア一覧",homes_path %></a></li>
                <li><a href="#member"><%= link_to "マイチームメンバー",ourmembers_path %></a></li>
            <ul>
        </div> 

        <div class="col-9">
            <% if @game %>
                <h3>スコア編集</h3>
                <%= form_for(@game, :url => { controller:'games', action:'update'})do |f| %>
                    <%= f.label :チーム選択 %>
                    <%= f.select :our ,
                        [["Aチーム"],["Bチーム"]], include_blank:"選択してください" %>
                    <%= f.label :時間 %>
                    <%= f.number_field :time_minute, min:0, max:30 %>:<%= f.number_field :time_second, min:00, max:59 %>
                    <%= f.label :背番号 %>
                    <%= f.number_field :back_number, :size => 5 %> 
                    <%= f.label :アクション %>
                    <%= f.select :action, 
                        [["得点"],["警告"],["2分間退場"],["7mスロー得点"],["7mスロー失敗"],["失格"]], include_blank: "選択して下さい" %>
                    <%= f.submit "編集する" %>
                <% end %>
            <% end %>

            <% if @timeout %>
                <h3>タイムアウト編集</h3>
                <%= form_for(@timeout, :url => { controller:'timeouts', action:'update'})do |f| %>
                    <%= f.label :チーム %>
                    <%= f.select :our, 
                        [["Aチーム"],["Bチーム"]], include_blank:"選択してください" %>
                    <%= f.number_field :time_minute, min:0, max:30 %>:<%= f.number_field :time_second, min:00, max:59 %>
                    <%= f.label :背番号 %>
                    <%= f.submit "編集する" %>
                <% end %>
            <% end %>


            <% if @gamemember %>
                <h3>相手チームメンバー登録</h3>
                <%= form_for(@gamemember, :url => { controller:'gamemembers', action:'update'})do |f| %>
                    <%= f.label :チーム %>
                    <%= f.select :our, 
                        [["Aチーム"],["Bチーム"]], include_blank:"選択してください" %>
                    <%= f.label :背番号 %>
                    <%= f.number_field :back_number,size: 5%>
                    <%= f.label :氏名 %>
                    <%= f.text_field :name, size: 10%>
                    <%= f.submit "編集する"%>
                <% end %>
            <% end %>


            <% if @gameexective %>
                <h3>相手役員編集</h3>
                <%= form_for(@gameexective, :url => { controller:'gameexectives', action:'update'})do |f| %>
                    <%= f.label :チーム %>
                    <%= f.select :our, 
                        [["Aチーム"],["Bチーム"]], include_blank:"選択してください" %>
                    <%= f.label :役員ランク %>
                    <%= f.select :rank, 
                        [["役員A"],["役員B"],["役員C"],["役員D"]], include_blank: "選択して下さい" %>
                    <%= f.label :氏名 %>
                    <%= f.text_field :name, size: 10%>
                    <%= f.submit "編集する"%>
                <% end %>   
            <% end %>
        </div>

    </div>
</div>  






