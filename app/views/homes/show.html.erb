<h1>スコア詳細</h1>
<h3>試合基本情報</h3>
<div class="input">
  <%= @input.date %>
  <%= @input.place %>
  <%= @input.game_name %>
  <%= @input.game_round %>
  <%= @input.gender %>
  <%= @input.age %>
</div>

<h3>メンバー</h3>
<% @gamemember.each do |t| %>
    <div class="gamemember">
        <%= t.our %>
        <%= t.back_number %>
        <%= t.name %>
    </div>
<% end %>

<h3>役員</h3>
<% @gameexective.each do |t| %>
    <div class="gameexective">
        <%= t.our %>
        <%= t.rank %>
        <%= t.name %>
    </div>
<% end %>

<h3>試合経過</h3>
<% @game.each do |t| %>
    <div class="game">
        <%= t.half %>
        <%= t.our %>
        <%= t.time_minute %>:<%= t.time_second %>
        <%= t.back_number %>
        <%= t.action %>
    </div>
<% end %>


