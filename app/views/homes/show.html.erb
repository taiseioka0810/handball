<h3>タイムアウト</h3>
<% @timeout.each do |t| %>
    <div class="timeout">
        <%= t.half %>
        <%= t.our %>
        <%= t.time_minute %>:<%= t.time_second %>
    </div>
<% end %>


<h3>得点集計</h3>
<h5>Aチーム</h5>
<div class="point">
    <%= @a_point %>
</div>
<div class="faul">
    <%= @a_faul %>
</div>
<div class="two_minutes_faul">
    <%= @a_two_minutes_faul %> 
</div> 
<div class="exit">
    <%= @a_exit %>
</div>

<h5>Bチーム</h5>
<div class="point">
    <%= @b_point %>
</div>
<div class="faul">
    <%= @b_faul %>
</div>
<div class="two_minutes_faul">
    <%= @b_two_minutes_faul %> 
</div> 
<div class="exit">
    <%= @b_exit %>
</div>



